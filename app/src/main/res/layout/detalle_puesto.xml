<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lmad.proyectomovil.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tacos Roman"
        android:id="@+id/txtNombrePuesto"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgPuesto"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/txtNombrePuesto"
        android:layout_centerHorizontal="true"
        android:contentDescription="Puesto de los tacos roman" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgCorazon"
        android:src="@drawable/abc_ic_star_black_36dp"
        android:layout_below="@+id/imgPuesto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Este puesto vende unos tacos muy ricos y el servicio que ofrecen es muy bueno. Recomendado!"
        android:id="@+id/txtDescripcionPuesto"
        android:layout_below="@+id/imgCorazon" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detail_Comment"
        android:id="@+id/txtMenu"
        android:layout_below="@+id/txtDescripcionPuesto"
        android:textAlignment="center" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/txtMenu" />

</RelativeLayout>
