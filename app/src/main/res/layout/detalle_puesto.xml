<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lmad.proyectomovil.MainActivity"

    android:padding="8dp">

    <ImageView
        android:id="@+id/imgStand"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:contentDescription="Puesto de los tacos roman"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Este puesto vende unos tacos muy ricos y el servicio que ofrecen es muy bueno. Recomendado!"
        android:id="@+id/tvDescription"
        android:layout_below="@+id/imgFavorite"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgStand"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.58" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detail_Comment"
        android:id="@+id/tvComment"
        android:layout_below="@+id/tvDescription"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lstComennts"
        android:layout_below="@+id/tvComment"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editComment"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editComment"
        android:inputType="textMultiLine"
        android:hint="@string/comments_Comment"
        android:layout_below="@+id/lstComennts"
        android:gravity="top"
        android:background="@color/button_material_light"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvComment"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comments_btnPost"
        android:id="@+id/btnPost"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/editComment"
        android:layout_alignStart="@+id/imgStand"
        app:layout_constraintTop_toBottomOf="@+id/lstComennts"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</LinearLayout>
