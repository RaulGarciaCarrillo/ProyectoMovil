                android:textSize="20dp"
                android:text="@string/add_Name"
                tools:layout_conversion_absoluteX="125dp"
                tools:layout_conversion_absoluteY="85dp"
                tools:layout_conversion_absoluteWidth="134dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:id="@+id/editNameStand"
                android:hint="@string/add_Name_Hint"
                android:background="@color/button_material_light"
                android:gravity="top|center"
                tools:layout_conversion_absoluteX="24dp"
                tools:layout_conversion_absoluteY="56dp"
                tools:layout_conversion_absoluteWidth="336dp"
                tools:layout_conversion_absoluteHeight="21dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNameStand"
                app:layout_constraintLeft_toLeftOf="parent"
