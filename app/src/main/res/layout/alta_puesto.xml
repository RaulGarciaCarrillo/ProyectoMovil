                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="53dp"
                android:layout_height="24dp"
                android:id="@+id/tvTypeStand"
                android:textSize="20dp"
                android:text="@string/add_Type"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/editNameStand"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp" />

            <CheckBox
                android:text="@string/Buffet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBuffet"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeStand"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="4dp"
                app:layout_constraintHorizontal_bias="0.04"
                android:layout_marginTop="4dp"
                android:textSize="12sp" />

            <CheckBox
                android:text="@string/Hamburgers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkHamburgers"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeStand"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toRightOf="@+id/checkBuffet"
                android:textSize="12sp" />

            <CheckBox
                android:text="@string/HotDogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkHotDog"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeStand"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintLeft_toRightOf="@+id/checkHamburgers"
                android:textSize="12sp" />

            <CheckBox
                android:text="@string/Pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkPizza"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeStand"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintRight_toRightOf="@+id/editNameStand"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintLeft_toRightOf="@+id/checkHotDog"
                android:textSize="12sp" />

            <CheckBox
                android:text="@string/Chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkChinese"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBuffet"
                app:layout_constraintLeft_toLeftOf="@+id/editNameStand"
                app:layout_constraintHorizontal_bias="0.04"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <CheckBox
                android:text="@string/Snack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkSnack"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/checkHamburgers"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="6dp"
                app:layout_constraintHorizontal_bias="0.04"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/checkChinese"
                android:layout_marginTop="4dp" />

            <CheckBox
                android:text="@string/Tacos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkTacos"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/checkHotDog"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="6dp"
                app:layout_constraintHorizontal_bias="0.04"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/checkSnack"
                android:layout_marginTop="4dp" />

            <CheckBox
                android:text="@string/Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkOthers"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/checkPizza"
