                android:layout_marginLeft="4dp"
                app:layout_constraintRight_toRightOf="@+id/editNameStand"
                app:layout_constraintHorizontal_bias="0.04"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/checkTacos"
                android:layout_marginTop="4dp" />


            <TextView
                android:layout_width="53dp"
                android:layout_height="24dp"
                android:id="@+id/tvPhotoStand"
                android:textSize="20dp"
                android:text="@string/add_Photo"
                tools:layout_conversion_absoluteX="165dp"
                tools:layout_conversion_absoluteY="24dp"
                tools:layout_conversion_absoluteWidth="53dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/checkChinese"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:layout_width="214dp"
                android:layout_height="212dp"
                android:id="@+id/imgPhotoStand"
                android:src="@android:mipmap/sym_def_app_icon"
                tools:layout_conversion_absoluteX="85dp"
                tools:layout_conversion_absoluteY="117dp"
                tools:layout_conversion_absoluteWidth="214dp"
                tools:layout_conversion_absoluteHeight="212dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPhotoStand"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDescriptionStand"
                android:inputType="textMultiLine"
                android:textSize="20dp"
                android:text="@string/add_Description"
                tools:layout_conversion_absoluteX="141dp"
                tools:layout_conversion_absoluteY="338dp"
                tools:layout_conversion_absoluteWidth="101dp"
                tools:layout_conversion_absoluteHeight="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imgPhotoStand"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp" />

            <EditText
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:id="@+id/editDescriptionStand"
                android:hint="@string/add_Description_Hint"
                android:gravity="top"
                android:background="@color/button_material_light"
                tools:layout_conversion_absoluteX="24dp"
                tools:layout_conversion_absoluteY="370dp"
                tools:layout_conversion_absoluteWidth="336dp"
                tools:layout_conversion_absoluteHeight="21dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDescriptionStand"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp" />

